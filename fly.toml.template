# fly.toml app configuration file
#
# See https://fly.io/docs/reference/configuration/ for information about how to use this file.
# 
# Note: This template uses environment variable substitution for deployment.
# Set FLY_APP_NAME, FLY_PRIMARY_REGION, ANTHROPIC_MODEL and OPENAI_MODEL in your deployment environment.
#

app = '${FLY_APP_NAME}'
primary_region = '${FLY_PRIMARY_REGION}'

[env]
  PORT = 3000
  CLOJURE_ENV = "production"
  ANTHROPIC_MODEL = "${ANTHROPIC_MODEL}"
  OPENAI_MODEL = "${OPENAI_MODEL}"

[http_service]
  internal_port = 3000
  force_https = true
  auto_stop_machines = "off"
  auto_start_machines = true
  min_machines_running = 0
  processes = ['app']

  [http_service.concurrency]
    type = "connections"
    hard_limit = 25
    soft_limit = 20

[[http_service.checks]]
     grace_period = "10s"
     interval = "30s"
     method = "GET"
     path = "/health"
     protocol = "http"
     timeout = "5s"

[[vm]]
  memory = '512mb'
  cpu_kind = 'shared'
  cpus = 1
